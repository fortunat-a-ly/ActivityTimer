<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.fortunately.timepass">

    <uses-permission android:name="android.permission.FOREGROUND_SERVICE"/>

    <application
        android:name="com.fortunately.timepass.ActivityTimerApplication"
        android:allowBackup="true"
        android:icon="@mipmap/ic_track_timepass_foreground"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/Theme.ActivityTimer">
        <activity android:name="com.fortunately.timepass.SearchableActivity"
            android:exported="false">
            <intent-filter>
                <action android:name="android.intent.action.SEARCH" />
            </intent-filter>
            <meta-data
                android:name="android.app.searchable"
                android:resource="@xml/category_searchable" />
        </activity>
        <activity
            android:name="com.fortunately.timepass.MainActivity"
            android:exported="true"
            android:theme="@style/Theme.ActivityTimer.NoActionBar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <service android:name="com.fortunately.timepass.screens.timer.TimerService"/>
        <service android:name="com.fortunately.timepass.screens.taskExecution.CountDownTimerService"/>
    </application>

</manifest>