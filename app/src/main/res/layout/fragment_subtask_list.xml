<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="20dp"
        android:background="#cfbaf0">

        <TextView
            android:id="@+id/list_txv_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="15dp"
            android:textSize="30sp"
            tools:text="Name"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"/>

        <TextView
            android:id="@+id/list_txv_duration_distribution"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="15dp"
            android:textSize="14sp"
            tools:text="14 min active task execution \n 10 min breaks"
            app:layout_constraintTop_toBottomOf="@id/list_txv_name"
            app:layout_constraintStart_toStartOf="parent"/>

        <TextView
            android:id="@+id/list_txv_duration"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="15dp"
            android:textSize="28sp"
            tools:text="24:00"
            app:layout_constraintTop_toTopOf="@id/list_txv_duration_distribution"
            app:layout_constraintBottom_toBottomOf="@+id/list_txv_duration_distribution"
            app:layout_constraintStart_toEndOf="@id/list_txv_duration_distribution"
            app:layout_constraintEnd_toEndOf="parent"/>

    </androidx.constraintlayout.widget.ConstraintLayout>

    <include layout="@layout/fragment_task_list"
        android:id="@+id/list"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

</LinearLayout>