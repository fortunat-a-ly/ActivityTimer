<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>
        <variable
            name="task"
            type="com.fortunately.timepass.data.task.Task" />
        <variable
            name="taskListener"
            type="com.fortunately.timepass.screens.listScreens.TaskListener" />
        <import type="com.fortunately.timepass.utils.DurationString"/>
        <import type="com.fortunately.timepass.utils.Constants"/>
    </data>

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardCornerRadius="15dp"
        app:cardElevation="7dp"
        app:cardPreventCornerOverlap="true"
        android:clickable="true"
        android:onClick="@{() -> taskListener.onClick(task)}"
        android:layout_marginHorizontal="15dp"
        android:layout_marginVertical="7dp">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:padding="15dp">

            <TextView
                android:id="@+id/txv_name"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:ellipsize="end"
                android:maxLines="1"
                android:text="@{task.name}"
                android:textSize="20sp"
                app:layout_constraintEnd_toStartOf="@+id/txv_duration"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                tools:text="Pull Ups Beginner" />

            <TextView
                android:id="@+id/txv_category"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:maxLines="1"
                android:paddingTop="5dp"
                android:text="@{Constants.INSTANCE.categories[task.category]}"
                android:textSize="12sp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/txv_name"
                tools:text="Category" />

            <TextView
                android:id="@+id/txv_duration"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:padding="5dp"
                android:text="@{DurationString.INSTANCE.fromSeconds(task.duration)}"
                android:textSize="15sp"
                app:layout_constraintBottom_toBottomOf="@+id/txv_category"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="@+id/txv_name"
                tools:text="0m2s" />

        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.cardview.widget.CardView>
</layout>
